---
// @ts-nocheck

import HtmlLayout from '@/layouts/HtmlLayout.astro';
import MainLayout from '@/layouts/MainLayout.vue';
import { questions } from '@/data/questions';
import Question from '@/components/question/Question.vue';
import ContentsInnerLayout from '@/layouts/ContentsInnerLayout.vue';
import FootSection from '@/components/section/FootSection.vue';

// 서버 사이드에서는 빈 배열로 시작 (클라이언트에서 세션 스토리지 데이터로 대체됨)
const initialAnswers = [];
---

<HtmlLayout bodyClassName="bg-sky-50">
	<MainLayout type="question" client:load>
		<ContentsInnerLayout type="question">
			<Question client:only="vue" questions={questions} initialAnswers={initialAnswers} />
		</ContentsInnerLayout>
		<FootSection client:idle />
	</MainLayout>
	<div class="hidden">
		<img src="/images/question/img-question-1.jpg" alt="" />
		<img src="/images/question/img-question-2.jpg" alt="" />
		<img src="/images/question/img-question-3.jpg" alt="" />
		<img src="/images/question/img-question-4.jpg" alt="" />
		<img src="/images/question/img-question-5.jpg" alt="" />
		<img src="/images/question/img-question-6.jpg" alt="" />
		<img src="/images/question/img-question-7.jpg" alt="" />
		<img src="/images/question/img-question-8.jpg" alt="" />
		<img src="/images/question/img-question-9.jpg" alt="" />
		<img src="/images/question/img-question-10.jpg" alt="" />
		<img src="/images/question/img-question-11.jpg" alt="" />
		<img src="/images/question/img-question-12.jpg" alt="" />
		<img src="/images/question/img-question-13.jpg" alt="" />
		<img src="/images/question/img-question-14.jpg" alt="" />
		<img src="/images/question/img-question-15.jpg" alt="" />
	</div>
</HtmlLayout>
