---
const { align = 'center' } = Astro.props;

const pcStyle = 'max-w-[768px] mx-auto flex flex-col items-center h-screen';
const mobileStyle = 'max-md:p-6';

const copyStyle = 'text-center text-[13px] text-gray-500 underline max-md:text-xs max-md:mt-4';
---

<div class={`relative ${pcStyle} ${mobileStyle} ${align === 'center' ? 'justify-center' : ''}`}>
	<main class="flex flex-col items-center">
		<slot />
	</main>
	<footer class="absolute z-0 bottom-[10px] left-1/2 -translate-x-1/2 text-center w-full">
		<a
			href="https://github.com/Plush777/kartrider-personality-test-app"
			target="_blank"
			class={copyStyle}>Made by Plush &copy; 2025</a
		>
	</footer>
</div>
